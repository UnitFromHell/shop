@model shop.Models.User

<form asp-action="create" asp-controller="home">
    <div class="form-group">
        <label asp-for="FirstNameUser" class="control-label">Фамилия</label>
        <input type="text" asp-for="FirstNameUser" class="form-control"/>
    </div>

    <div class="form-group">
        <label asp-for="SecondNameUser" class="control-label">Имя</label>
        <input type="text" asp-for="SecondNameUser" class="form-control"/>
    </div>

    <div class="form-group">
        <label asp-for="MiddleNameUser" class="control-label">Отчество</label>
        <input type="text" asp-for="MiddleNameUser" class="form-control"/>
    </div>

    <div class="form-group">
        <label asp-for="LoginUser" class="control-label">Логин</label>
        <input type="text" asp-for="LoginUser" class="form-control"/>
    </div>

    <div class="form-group">
        <label asp-for="PasswordUser" class="control-label">Пароль</label>
        <input type="password" asp-for="PasswordUser" class="form-control"/>
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber" class="control-label">Номер телефона</label>
        <input type="tel" pattern="+7([0-9]{3})-[0-9]{3}-[0-9]{2}-[0-9]{2}" asp-for="PhoneNumber" class="form-control"/>
    </div>

    <div class="form-group">
        <label asp-for="Email" class="control-label">Адрес электронной почты</label>
        <input type="email" asp-for="Email" class="form-control"/>
    </div>
   
    <div class="form-group">
        <input type="submit" value = "Отправить" class="btn btn-default" />
    </div>
</form>