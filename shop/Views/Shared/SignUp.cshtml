@model shop.Models.User

<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Регистрация</title>
    <link  href="~/css/reg.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
</head>
<body>
     <form class="Reg" asp-action="create" asp-controller="home">
        
      
        <h1 class="titile">Регистрация</h1>
        <div class="Reg1">
            <input class="name" class="form-control" type="text"  asp-for="SecondNameUser" placeholder="Введите имя">
            <input class="name1" class="form-control" type="text" asp-for="FirstNameUser" placeholder="Введите фамилию">
            <input class="name2" class="form-control" type="text" asp-for="MiddleNameUser" placeholder="Введите отчество">
            <input class="phone_number" class="form-control" type="tel" asp-for="PhoneNumber" pattern="+7([0-9]{3})-[0-9]{3}-[0-9]{2}-[0-9]{2}" asp-for="PhoneNumber" placeholder="Введите номер телефона">
           <script>
   var phoneNumberInput = document.querySelector('.phone_number');

// Назначение обработчика событий для проверки ввода номера телефона
phoneNumberInput.addEventListener('input', function() {
  // Извлечение только цифр из номера телефона
  var digits = this.value.replace(/\D/g, '');

  // Применение формата к элементам номера телефона
  var formatted = digits.replace(/^(\d{3})(\d{3})(\d{2})(\d{2})$/, '+7($1)-$2-$3-$4');

  // Установка отформатированного значения в поле ввода номера телефона
  this.value = formatted;
});
           </script>
            <input class="E-mail" class="form-control" type="email"  asp-for="Email" placeholder="Введите E-mail">
            <input class="Login" class="form-control" type="text" asp-for="LoginUser" placeholder="Введите логин" />
            <input class="Password1" class="form-control" type="password" asp-for="PasswordUser"  placeholder="Введите пороль">
            <form onsubmit="return checkFields(event)">
            <button type="submit" value = "Отправить"> Создать аккаунт</button>
            </form>
            @Html.ActionLink("Авторизация","SignIn")<br> 
        </div>
        
        
  
        </form>
        
       <script>
  var form = document.querySelector('form');
  
  form.addEventListener('submit', function(event) {
    var nameField = document.querySelector('.name');
    var name1Field = document.querySelector('.name1');
    var phoneField = document.querySelector('.phone_number');
    var emailField = document.querySelector('.E-mail');
    var loginField = document.querySelector('.Login');
    var passwordField = document.querySelector('.Password1');

  
    if(nameField.value == "" || name1Field.value == "" || phoneField.value == "" || emailField.value == "" || loginField.value == "" || passwordField.value == "" ) {
      alert("Пожалуйста, заполните поля Фамилия, Имя, Email, номер телефонв, логин, пароль");
      event.preventDefault();
    }
  });
</script>


</body>
</html>
